                /// <summary>
                /// Recursively render a module as a top-bar nav item (with potential dropdown for children).
                /// </summary>
                void RenderTopBarModule(ModuleDto module, IEnumerable<ModuleDto> allModules, string currentUrl)
                {
                    // Find children
                    var childModules = allModules
                    .Where(m => m.ParentModuleId == module.Id)
                    .OrderBy(m => m.Order)
                    .ToList();

                    // Normalize URL
                    var moduleUrl = module.ModuleUrl?.StartsWith("/") == true
                    ? module.ModuleUrl
                    : "/" + module.ModuleUrl?.TrimStart('/');

                    // Are there child modules?
                    bool hasChildren = childModules.Any();

                    // Mark active if:
                    //   (A) currentUrl matches module’s URL, or
                    //   (B) one of the child modules matches
                    bool isActive = currentUrl == moduleUrl
                    || childModules.Any(c => currentUrl == NormalizeUrl(c.ModuleUrl));

                    if (hasChildren)
                    {
                        <!-- Parent module with a dropdown -->
                        <li class="nav-item hs-has-sub-menu @(isActive ? "active" : "")">
                            <a class="hs-mega-menu-invoker nav-link dropdown-toggle @(isActive ? "active" : "")"
                               href="#"
                               role="button"
                               data-bs-toggle="dropdown"
                               aria-expanded="@(isActive.ToString().ToLower())">
                                @if (!string.IsNullOrEmpty(module.ModuleIcon))
                                {
                                    <i class="@module.ModuleIcon dropdown-item-icon"></i>
                                }
                                @module.ModuleName
                            </a>
                            <ul class="hs-sub-menu dropdown-menu navbar-dropdown-menu-borderless auto-dropdown"
                                aria-labelledby="menu_@module.Id">
                                @foreach (var child in childModules)
                                {
                                    RenderTopBarModule(child, allModules, currentUrl);
                                }
                            </ul>
                        </li>
                    }
                    else
                    {
                        <!-- Leaf module -->
                        <li class="nav-item">
                            <a class="nav-link @(isActive ? "active" : "")"
                               href="@moduleUrl">
                                @if (!string.IsNullOrEmpty(module.ModuleIcon))
                                {
                                    <i class="@module.ModuleIcon dropdown-item-icon"></i>
                                }
                                @module.ModuleName
                            </a>
                        </li>
                    }
                }

                /// <summary>
                /// Utility to normalize any module URL by ensuring it starts with “/”.
                /// </summary>
                string NormalizeUrl(string rawUrl)
                {
                    if (string.IsNullOrEmpty(rawUrl))
                    {
                        return "";
                    }
                    return rawUrl.StartsWith("/") ? rawUrl : "/" + rawUrl.TrimStart('/');
                }
