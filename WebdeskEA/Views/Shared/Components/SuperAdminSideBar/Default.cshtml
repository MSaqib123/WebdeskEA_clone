@model ModuleDto
@{
    var currentUrl = Context.Request.Path.ToString();
    var isDashboardActiv = currentUrl.Contains("/DSB_SuperAdmin");
    var isUserManagementActive = currentUrl.Contains("/Users") || currentUrl.Contains("/Modules") || currentUrl.Contains("/UserRightManager") || currentUrl.Contains("/UserRights") || currentUrl.Contains("/RolePermissions") || currentUrl.Contains("/Role");
    var isPackage = currentUrl.Contains("/Package") || currentUrl.Contains("/PackageType") || currentUrl.Contains("/PackagePermission");
    var isTenant = currentUrl.Contains("/TenantType") || currentUrl.Contains("/Tenant");
}

<aside class="js-navbar-vertical-aside navbar navbar-vertical-aside navbar-vertical navbar-vertical-fixed navbar-expand-xl navbar-bordered bg-white  ">
    <div class="navbar-vertical-container">
        <div class="navbar-vertical-footer-offset">
            <!-- Logo -->
            <a class="navbar-brand" href="/" aria-label="Front">
                <img class="navbar-brand-logo" src="~/uploads/ProjectIcon/projectLogo.png" alt="Logo" data-hs-theme-appearance="default" style="transform: scale(1.4);">
                <img class="navbar-brand-logo" src="~/uploads/ProjectIcon/projectLogo.png" alt="Logo" data-hs-theme-appearance="dark" style="transform: scale(1.4);">
                <img class="navbar-brand-logo-mini" src="~/uploads/ProjectIcon/projectLogo.png" alt="Logo" data-hs-theme-appearance="default" style="transform: scale(1.2);">
                <img class="navbar-brand-logo-mini" src="~/uploads/ProjectIcon/projectLogo.png" alt="Logo" data-hs-theme-appearance="dark" style="transform: scale(1.2);">
            </a>
            <!-- End Logo -->
            <!-- Navbar Vertical Toggle -->
            <button type="button" class="js-navbar-vertical-aside-toggle-invoker navbar-aside-toggler">
                <i class="bi-arrow-bar-left navbar-toggler-short-align" data-bs-template='<div class="tooltip d-none d-md-block" role="tooltip"><div class="arrow"></div><div class="tooltip-inner"></div></div>' data-bs-toggle="tooltip" data-bs-placement="right" title="Collapse"></i>
                <i class="bi-arrow-bar-right navbar-toggler-full-align" data-bs-template='<div class="tooltip d-none d-md-block" role="tooltip"><div class="arrow"></div><div class="tooltip-inner"></div></div>' data-bs-toggle="tooltip" data-bs-placement="right" title="Expand"></i>
            </button>
            <!-- End Navbar Vertical Toggle -->
            <!-- Content -->
            <div class="navbar-vertical-content">
                <div id="navbarVerticalMenu" class="nav nav-pills nav-vertical card-navbar-nav">

                    <!-- Dashboard Link -->
                    <div class="nav-item">
                        <a class="nav-link @(isDashboardActiv ? "active" : "")"
                           asp-area="Dashboard"
                           asp-controller="DSB_SuperAdmin"
                           asp-action="Index"
                           data-placement="left">
                            <i class="bi-house-door nav-icon"></i>
                            <span class="nav-link-title">Dashboards</span>
                        </a>
                    </div>

                    <!-- User Management -->
                    <span class="dropdown-header mt-4">User Management</span>
                    <small class="bi-three-dots nav-subtitle-replacer"></small>
                    <div class="nav-item">
                        <a class="nav-link dropdown-toggle @(isUserManagementActive ? "active" : "")"
                           href="#navbarVerticalMenuUsers"
                           role="button"
                           data-bs-toggle="collapse"
                           data-bs-target="#navbarVerticalMenuUsers"
                           aria-expanded="@(isUserManagementActive ? "true" : "false")"
                           aria-controls="navbarVerticalMenuUsers">
                            <i class="bi-people nav-icon"></i>
                            <span class="nav-link-title">User Management</span>
                        </a>
                        <div id="navbarVerticalMenuUsers" class="nav-collapse collapse @(isUserManagementActive ? "show" : "")" data-bs-parent="#navbarVerticalMenu">
                            <a class="nav-link @(currentUrl == Url.Action("Index", "Users", new { area = "Admin" }) ? "active" : "")"
                               asp-area="Admin" asp-controller="Users" asp-action="Index">Users</a>
                            <a class="nav-link @(currentUrl == Url.Action("Index", "Modules", new { area = "Admin" }) ? "active" : "")"
                               asp-area="Admin" asp-controller="Modules" asp-action="Index">Modules</a>
                            <a class="nav-link @(currentUrl == Url.Action("Index", "RolePermissions", new { area = "Admin" }) ? "active" : "")"
                               asp-area="Admin" asp-controller="RolePermissions" asp-action="Index">RolePermissions</a>
                            @* <a class="nav-link @(currentUrl == Url.Action("Index", "UserRightManager", new { area = "Admin" }) ? "active" : "")"
                               asp-area="Admin" asp-controller="UserRightManager" asp-action="Index">User Rights Manager</a>
                            <a class="nav-link @(currentUrl == Url.Action("Index", "UserRights", new { area = "Admin" }) ? "active" : "")"
                               asp-area="Admin" asp-controller="UserRights" asp-action="Index">User Rights</a> *@
                        </div>
                    </div>
                    <!-- Package -->
                    <span class="dropdown-header mt-4">Subscription Setup</span>
                    <small class="bi-three-dots nav-subtitle-replacer"></small>
                    <div class="nav-item">
                        <a class="nav-link dropdown-toggle @(isPackage ? "active" : "")"
                           href="#navbarVerticalMenuPackage"
                           role="button"
                           data-bs-toggle="collapse"
                           data-bs-target="#navbarVerticalMenuPackage"
                           aria-expanded="@(isPackage ? "true" : "false")"
                           aria-controls="navbarVerticalMenuPackage">
                            <i class="bi-people nav-icon"></i>
                            <span class="nav-link-title">Package</span>
                        </a>
                        <div id="navbarVerticalMenuPackage" class="nav-collapse collapse @(isPackage ? "show" : "")" data-bs-parent="#navbarVerticalMenu">
                            <a class="nav-link @(currentUrl == Url.Action("Index", "Company", new { area = "CompanySites" }) ? "active" : "")"
                               asp-area="CompanySites" asp-controller="Company" asp-action="Index">Company</a>
                            <a class="nav-link @(currentUrl == Url.Action("Index", "PackagePermission", new { area = "Admin" }) ? "active" : "")"
                               asp-area="Admin" asp-controller="PackagePermission" asp-action="Index">Package</a>
                            @* <a class="nav-link @(currentUrl == Url.Action("Index", "Package", new { area = "Admin" }) ? "active" : "")"
                               asp-area="Admin" asp-controller="Package" asp-action="Index">Package</a> *@
                            <a class="nav-link @(currentUrl == Url.Action("Index", "PackageType", new { area = "Admin" }) ? "active" : "")"
                               asp-area="Admin" asp-controller="PackageType" asp-action="Index">PackageType</a>

                        </div>
                    </div>

                    <!-- Package -->
                    <div class="nav-item">
                        <a class="nav-link dropdown-toggle @(isTenant ? "active" : "")"
                           href="#navbarVerticalTenantPermission"
                           role="button"
                           data-bs-toggle="collapse"
                           data-bs-target="#navbarVerticalTenantPermission"
                           aria-expanded="@(isTenant ? "true" : "false")"
                           aria-controls="navbarVerticalTenantPermission">
                            <i class="bi-people nav-icon"></i>
                            <span class="nav-link-title">Tenant Information</span>
                        </a>
                        <div id="navbarVerticalTenantPermission" class="nav-collapse collapse @(isTenant ? "show" : "")" data-bs-parent="#navbarVerticalMenu">
                            @* <a class="nav-link @(currentUrl == Url.Action("Index", "Company", new { area = "CompanySites" }) ? "active" : "")"
                               asp-area="CompanySites" asp-controller="Company" asp-action="Index">Company</a> *@
                            <a class="nav-link @(currentUrl == Url.Action("Index", "TenantType", new { area = "Admin" }) ? "active" : "")"
                               asp-area="Admin" asp-controller="TenantType" asp-action="Index">TenantType</a>
                            <a class="nav-link @(currentUrl == Url.Action("Index", "Tenant", new { area = "Admin" }) ? "active" : "")"
                               asp-area="Admin" asp-controller="Tenant" asp-action="Index">Tenant</a>

                        </div>
                    </div>
                </div>
            </div>
            <!-- End Content -->
            <!-- Footer -->
            <div class="navbar-vertical-footer">
                <ul class="navbar-vertical-footer-list">
                    <li class="navbar-vertical-footer-list-item">
                        <!-- Style Switcher -->
                        <div class="dropdown dropup">
                            <button type="button" class="btn btn-ghost-secondary btn-icon rounded-circle" id="selectThemeDropdown" data-bs-toggle="dropdown" aria-expanded="false" data-bs-dropdown-animation>
                            </button>

                            <div class="dropdown-menu navbar-dropdown-menu navbar-dropdown-menu-borderless" aria-labelledby="selectThemeDropdown">
                                <a class="dropdown-item" href="#" data-icon="bi-moon-stars" data-value="auto">
                                    <i class="bi-moon-stars me-2"></i>
                                    <span class="text-truncate" title="Auto (system default)">Auto (system default)</span>
                                </a>
                                <a class="dropdown-item" href="#" data-icon="bi-brightness-high" data-value="default">
                                    <i class="bi-brightness-high me-2"></i>
                                    <span class="text-truncate" title="Default (light mode)">Default (light mode)</span>
                                </a>
                                <a class="dropdown-item active" href="#" data-icon="bi-moon" data-value="dark">
                                    <i class="bi-moon me-2"></i>
                                    <span class="text-truncate" title="Dark">Dark</span>
                                </a>
                            </div>
                        </div>

                        <!-- End Style Switcher -->
                    </li>

                    <li class="navbar-vertical-footer-list-item">
                        <!-- Other Links -->
                        <div class="dropdown dropup">
                            <button type="button" class="btn btn-ghost-secondary btn-icon rounded-circle" id="otherLinksDropdown" data-bs-toggle="dropdown" aria-expanded="false" data-bs-dropdown-animation>
                                <i class="bi-info-circle"></i>
                            </button>

                            <div class="dropdown-menu navbar-dropdown-menu-borderless" aria-labelledby="otherLinksDropdown">
                                <span class="dropdown-header">Help</span>
                                <a class="dropdown-item" href="#">
                                    <i class="bi-journals dropdown-item-icon"></i>
                                    <span class="text-truncate" title="Resources &amp; tutorials">Resources &amp; tutorials</span>
                                </a>
                                <a class="dropdown-item" href="#">
                                    <i class="bi-command dropdown-item-icon"></i>
                                    <span class="text-truncate" title="Keyboard shortcuts">Keyboard shortcuts</span>
                                </a>
                                <a class="dropdown-item" href="#">
                                    <i class="bi-alt dropdown-item-icon"></i>
                                    <span class="text-truncate" title="Connect other apps">Connect other apps</span>
                                </a>
                                <a class="dropdown-item" href="#">
                                    <i class="bi-gift dropdown-item-icon"></i>
                                    <span class="text-truncate" title="What's new?">What's new?</span>
                                </a>
                                <div class="dropdown-divider"></div>
                                <span class="dropdown-header">Contacts</span>
                                <a class="dropdown-item" href="#">
                                    <i class="bi-chat-left-dots dropdown-item-icon"></i>
                                    <span class="text-truncate" title="Contact support">Contact support</span>
                                </a>
                            </div>
                        </div>
                        <!-- End Other Links -->
                    </li>

                    <li class="navbar-vertical-footer-list-item">
                        <!-- Language -->
                        <div class="dropdown dropup">
                            <button type="button" class="btn btn-ghost-secondary btn-icon rounded-circle" id="selectLanguageDropdown" data-bs-toggle="dropdown" aria-expanded="false" data-bs-dropdown-animation>
                                <img class="avatar avatar-xss avatar-circle" src="~/Template/vendor/flag-icon-css/flags/1x1/us.svg" alt="United States Flag">
                            </button>

                            <div class="dropdown-menu navbar-dropdown-menu-borderless" aria-labelledby="selectLanguageDropdown">
                                <span class="dropdown-header">Select language</span>
                                <a class="dropdown-item" href="#">
                                    <img class="avatar avatar-xss avatar-circle me-2" src="~/Template/vendor/flag-icon-css/flags/1x1/us.svg" alt="Flag">
                                    <span class="text-truncate" title="English">English (US)</span>
                                </a>
                                <a class="dropdown-item" href="#">
                                    <img class="avatar avatar-xss avatar-circle me-2" src="~/Template/vendor/flag-icon-css/flags/1x1/gb.svg" alt="Flag">
                                    <span class="text-truncate" title="English">English (UK)</span>
                                </a>
                                <a class="dropdown-item" href="#">
                                    <img class="avatar avatar-xss avatar-circle me-2" src="~/Template/vendor/flag-icon-css/flags/1x1/de.svg" alt="Flag">
                                    <span class="text-truncate" title="Deutsch">Deutsch</span>
                                </a>
                                <a class="dropdown-item" href="#">
                                    <img class="avatar avatar-xss avatar-circle me-2" src="~/Template/vendor/flag-icon-css/flags/1x1/dk.svg" alt="Flag">
                                    <span class="text-truncate" title="Dansk">Dansk</span>
                                </a>
                                <a class="dropdown-item" href="#">
                                    <img class="avatar avatar-xss avatar-circle me-2" src="~/Template/vendor/flag-icon-css/flags/1x1/it.svg" alt="Flag">
                                    <span class="text-truncate" title="Italiano">Italiano</span>
                                </a>
                                <a class="dropdown-item" href="#">
                                    <img class="avatar avatar-xss avatar-circle me-2" src="~/Template/vendor/flag-icon-css/flags/1x1/cn.svg" alt="Flag">
                                    <span class="text-truncate" title="中文 (繁體)">中文 (繁體)</span>
                                </a>
                            </div>
                        </div>

                        <!-- End Language -->
                    </li>
                </ul>
            </div>
            <!-- End Footer -->
        </div>
    </div>
</aside>


