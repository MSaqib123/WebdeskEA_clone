@model SupplierDto
@{
    ViewData["Title"] = "Supplier";
}
<!-- Page Header -->
<div class="page-header">
    <div class="row align-items-center">
        <div class="col-sm mb-2 mb-sm-0">
            <h1 class="page-header-title">@ViewBag.NameOfForm</h1> 
            <h6>Full details of a  @ViewBag.NameOfForm </h6>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <!-- Body -->
            <div class="card-body">
                <div class="row">
                    <!-- Supplier Code -->
                    <div class="col-sm-4">
                        <div class="mb-4">
                            <label asp-for="Code">Supplier Code</label>
                            <input type="text" asp-for="Code" class="form-control" disabled />
                        </div>
                    </div>

                    <!-- Supplier Name -->
                    <div class="col-sm-4">
                        <div class="mb-4">
                            <label asp-for="Name">Supplier Name</label>
                            <input type="text" asp-for="Name" class="form-control" disabled />
                        </div>
                    </div>

                    <!-- Supplier Phone Number -->
                    <div class="col-sm-4">
                        <div class="mb-4">
                            <label asp-for="PhoneNo">Phone Number</label>
                            <input type="text" asp-for="PhoneNo" class="form-control" disabled />
                        </div>
                    </div>

                    <!-- Supplier Email -->
                    <div class="col-sm-4">
                        <div class="mb-4">
                            <label asp-for="Email">Email</label>
                            <input type="email" asp-for="Email" class="form-control" disabled />
                        </div>
                    </div>

                    <!-- Credit Limit -->
                    <div class="col-sm-4">
                        <div class="mb-4">
                            <label asp-for="CreditLimit">Credit Limit</label>
                            <input type="number" asp-for="CreditLimit" class="form-control" disabled />
                        </div>
                    </div>

                    <!-- AccountName -->
                    <div class="col-sm-4">
                        <div class="mb-4">
                            <label asp-for="AccountName">COA Name</label>
                            <input asp-for="AccountName" class="form-control" disabled />
                        </div>
                    </div>

                    <!-- Tenant ID -->
                    <div class="col-sm-4">
                        <div class="mb-4">
                            <label asp-for="TenantName">TenantName</label>
                            <input asp-for="TenantName" class="form-control" disabled />
                        </div>
                    </div>

                    <!-- Company ID -->
                    <div class="col-sm-4">
                        <div class="mb-4">
                            <label asp-for="CompanyName">CompanyName</label>
                            <input type="number" asp-for="CompanyName" class="form-control" disabled />
                        </div>
                    </div>

                    <!-- Country -->
                    <div class="col-sm-4">
                        <div class="mb-4">
                            <label asp-for="CountryName">Country</label>
                            <input asp-for="CountryName" class="form-control" disabled />
                        </div>
                    </div>

                    <!-- State Province -->
                    <div class="col-sm-4">
                        <div class="mb-4">
                            <label asp-for="StateName">State/Province</label>
                            <input asp-for="StateName" class="form-control" disabled />
                        </div>
                    </div>

                    <!-- City -->
                    <div class="col-sm-4">
                        <div class="mb-4">
                            <label asp-for="CityName">City</label>
                            <input asp-for="CityName" class="form-control" disabled />
                        </div>
                    </div>

                    <!-- Supplier Login Checkbox -->
                    <div class="col-sm-4">
                        <div class="mb-4">
                            <label>Is Supplier Login</label><br /><br />
                            <label class="checkboxs mb-5">
                                <input type="checkbox" asp-for="IsSupplierLogin" disabled />
                                <span class="checkmarks"></span>
                            </label>
                        </div>
                    </div>

                   @*  <!-- Supplier Login Link -->
                    <div class="col-sm-4">
                        <div class="mb-4">
                            <label asp-for="SupplierLoginLink">Supplier Login Link</label>
                            <input type="text" asp-for="SupplierLoginLink" class="form-control" disabled />
                        </div>
                    </div> *@

                    <!-- Supplier Username -->
                    <div class="col-sm-4" id="usernameField">
                        <div class="mb-4">
                            <label asp-for="SupplierUserName">Supplier Username</label>
                            <input type="text" asp-for="SupplierUserName" class="form-control" disabled />
                        </div>
                    </div>

                    <!-- Supplier Password -->
                    <div class="col-sm-4" id="passwordField">
                        <div class="mb-4">
                            <label asp-for="SupplierPassword">Supplier Password</label>
                            <input type="password" asp-for="SupplierPassword" class="form-control" disabled />
                        </div>
                    </div>
                </div>


                <div class="d-flex justify-content-start gap-3">
                    <a class="btn btn-primary  me-2" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
                    <a asp-action="Index" class="btn btn-white" id="bt">Cancel</a>
                </div>
            </div>
        </div>
    </div>
</div>



@section scripts 
{
    <script>
        (function () {
            window.onload = function () {


                // INITIALIZATION OF NAVBAR VERTICAL ASIDE
                // =======================================================
                new HSSideNav('.js-navbar-vertical-aside').init()


                // INITIALIZATION OF FORM SEARCH
                // =======================================================
                new HSFormSearch('.js-form-search')


                // INITIALIZATION OF BOOTSTRAP DROPDOWN
                // =======================================================
                HSBsDropdown.init()


                // INITIALIZATION OF SELECT
                // =======================================================
                HSCore.components.HSTomSelect.init('.js-select')


                // INITIALIZATION OF ADD FIELD
                // =======================================================
                new HSAddField('.js-add-field', {
                    addedField: field => {
                        HSCore.components.HSTomSelect.init(field.querySelector('.js-select-dynamic'))
                        HSCore.components.HSMask.init(field.querySelector('.js-input-mask'))
                    }
                })


                // INITIALIZATION OF INPUT MASK
                // =======================================================
                HSCore.components.HSMask.init('.js-input-mask')
            }
        })()
    </script>

    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const isLoginCheckbox = document.querySelector('#IsSupplierLogin');

            const usernameField = document.querySelector('#usernameField');
            const passwordField = document.querySelector('#passwordField');

            const toggleCustomerLoginFields = () => {
                const displayStyle = isLoginCheckbox.checked ? '' : 'none';
                usernameField.style.display = displayStyle;
                passwordField.style.display = displayStyle;
            };

            // Call the function on page load
            toggleCustomerLoginFields();

            // Add event listener to the checkbox
            isLoginCheckbox.addEventListener('change', toggleCustomerLoginFields);
        });
    </script>

    <script type="module">
        //______ Toggle Component ____
        import { ToggleComponent } from '/Frontentjs/dynamicComponents/dynamicToggle.js';
        new ToggleComponent('IsSupplierLogin', ['usernameField', 'passwordField']);
    </script>
 }
