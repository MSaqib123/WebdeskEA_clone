@model UserRightDto
@{
    ViewData["Title"] = "UserRightManager";
}
@{
    var currentUrl = Context.Request.Path.ToString();

    var tenantId = Context.TenantId();
    var companyId = Context.CompanyId();
    var isTenantAdmin = Context.IsTenantAdmin();
}
<div class="page-header">
    <div class="page-title">
        <h4>@(ViewBag.NameOfForm)</h4>
        <h6>Deletes @(ViewBag.NameOfForm)</h6>
    </div>
</div>

<div class="row">
    <form method="post" asp-route-id="@Model.UserId">
        <div class="col-lg-12 col-sm-12">
            <div class="card">
                <div class="card-body">
                    <div class="productdetails">
                        <ul class="product-bar">
                            <li>
                                <h4>User</h4>
                                <h6>@Model.UserName</h6>
                            </li>
                        </ul>
                    </div>
                    <div class="productdetails" style="margin-top:15px">
                        <div class="table-responsive">
                            <table class="table  datanew">
                                <thead>
                                    <tr>
                                        <th>User</th>
                                        <th>Module</th>
                                        <th>Insert</th>
                                        <th>Update</th>
                                        <th>View</th>
                                        <th>Print</th>
                                        <th>Delete</th>
                                        <th>Edit</th>
                                        <th>Approve</th>
                                        <th>Active</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.UserRigthsList)
                                    {
                                        <tr>
                                            <td>@item.UserName</td>
                                            <td>@item.ModuleName</td>
                                            <td>
                                                <label class="checkboxs">
                                                    <input type="checkbox" @(item.RightInsert ? "checked" : "") disabled>
                                                    <span class="checkmarks"></span>
                                                </label>
                                            </td>
                                            <td>
                                                <label class="checkboxs">
                                                    <input type="checkbox" @(item.RightUpdate ? "checked" : "") disabled>
                                                    <span class="checkmarks"></span>
                                                </label>
                                            </td>
                                            <td>
                                                <label class="checkboxs">
                                                    <input type="checkbox" @(item.RightView ? "checked" : "") disabled>
                                                    <span class="checkmarks"></span>
                                                </label>
                                            </td>
                                            <td>
                                                <label class="checkboxs">
                                                    <input type="checkbox" @(item.RightPrint ? "checked" : "") disabled>
                                                    <span class="checkmarks"></span>
                                                </label>
                                            </td>
                                            <td>
                                                <label class="checkboxs">
                                                    <input type="checkbox" @(item.RightDelete ? "checked" : "") disabled>
                                                    <span class="checkmarks"></span>
                                                </label>
                                            </td>
                                            <td>
                                                <label class="checkboxs">
                                                    <input type="checkbox" @(item.RightEdit ? "checked" : "") disabled>
                                                    <span class="checkmarks"></span>
                                                </label>
                                            </td>
                                            <td>
                                                <label class="checkboxs">
                                                    <input type="checkbox" @(item.RightApprove ? "checked" : "") disabled>
                                                    <span class="checkmarks"></span>
                                                </label>
                                            </td>
                                            <td>
                                                <label class="checkboxs">
                                                    <input type="checkbox" @(item.Active ? "checked" : "") disabled>
                                                    <span class="checkmarks"></span>
                                                </label>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            <div>
                <button class="btn btn-submit me-2">Submit</button>
                <a asp-action="Index" class="btn btn-cancel" id="bt">Cancel</a>
            </div>
        </div>
    </form>
</div>

