@section scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Grab all inputs that have the .js-toggle-password class
            const togglePwdInputs = document.querySelectorAll('.js-toggle-password');

            togglePwdInputs.forEach(function (inputEl) {
                // Get the JSON from the data attribute
                const options = JSON.parse(inputEl.getAttribute('data-hs-toggle-password-options') || '{}');

                if (!options.target) return; // No target, skip

                const button = document.querySelector(options.target);
                const iconTarget = options.classChangeTarget
                    ? document.querySelector(options.classChangeTarget)
                    : null;

                // When the user clicks the button, toggle type
                button.addEventListener('click', function () {
                    if (inputEl.type === 'password') {
                        inputEl.type = 'text';
                        if (iconTarget) {
                            iconTarget.classList.remove(options.defaultClass);
                            iconTarget.classList.add(options.showClass);
                        }
                    } else {
                        inputEl.type = 'password';
                        if (iconTarget) {
                            iconTarget.classList.remove(options.showClass);
                            iconTarget.classList.add(options.defaultClass);
                        }
                    }
                });
            });
        });
    </script>
