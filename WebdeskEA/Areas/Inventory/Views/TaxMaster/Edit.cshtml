@model TaxMasterDto
@{
    ViewData["Title"] = "TaxMaster";
}
@{
    var currentUrl = Context.Request.Path.ToString();
    var tenantId = Context.TenantId();
    var companyId = Context.CompanyId();
    var isTenantAdmin = Context.IsTenantAdmin();
}
<!-- Page Header -->
<div class="page-header">
    <div class="row align-items-center">
        <div class="col-sm mb-2 mb-sm-0">
            <h1 class="page-header-title">Add @ViewBag.NameOfForm</h1>
        </div>
    </div>
</div>

@if (!ViewData.ModelState.IsValid)
{
    foreach (var state in ViewData.ModelState)
    {
        if (state.Value.Errors.Count > 0)
        {
            foreach (var error in state.Value.Errors)
            {
                <script>
                    notyf.error({
                        message: '@error.ErrorMessage',
                        duration: 10000 // 10 seconds
                    });
                </script>
            }
        }
    }
}

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <!-- Body -->
            <div class="card-body">
                <form asp-action="Edit" method="post">
                    <div class="row">

                        <div class="col-sm-4">
                            <div class="mb-4">
                                <label asp-for="TaxName">Tax Name</label>
                                <input type="text" asp-for="TaxName" class="form-control" />
                                <span asp-validation-for="TaxName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="mb-4">
                                <label asp-for="COAId">Select Account</label>
                                <div class="tom-select-custom">
                                    <select class="js-select form-select"
                                            asp-for="COAId"
                                            asp-items="@(new SelectList(Model.COADtos, "Id", "AccountName"))"
                                            autocomplete="off"
                                            data-hs-tom-select-options='{"placeholder": "--- Select ---"}'>
                                        <option value="0">--- Select ---</option>
                                    </select>
                                </div>
                                <span asp-validation-for="COAId" class="text-danger"></span>
                            </div>
                        </div>
                        <!-- Tax Value -->
                        <div class="col-sm-4">
                            <div class="mb-4">
                                <label asp-for="TaxValue">Tax Value</label>
                                <input type="number" asp-for="TaxValue" class="form-control" step="0.01" />
                                <span asp-validation-for="TaxValue" class="text-danger"></span>
                            </div>
                        </div>
                        <!-- Is Inclusive -->
                        <div class="col-sm-3">
                            <div class="mb-4">
                                <label for="isInclusive">Is Inclusive</label><br />
                                <div class="form-check form-switch mt-2">
                                    <input type="checkbox" id="isInclusive" asp-for="IsInclusive" class="form-check-input" role="switch" />
                                </div>
                                <span asp-validation-for="IsInclusive" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Is Exclusive -->
                        <div class="col-sm-3">
                            <div class="mb-4">
                                <label for="isExclusive">Is Exclusive</label><br />
                                <div class="form-check form-switch mt-2">
                                    <input type="checkbox" id="isExclusive" asp-for="IsExclusive" class="form-check-input" role="switch" />
                                </div>
                                <span asp-validation-for="IsExclusive" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Is Percentage -->
                        <div class="col-sm-3">
                            <div class="mb-4">
                                <label>Is Percentage</label><br />
                                <div class="form-check form-switch mt-2">
                                    <input type="checkbox" asp-for="IsPercentage" class="form-check-input" role="switch" />
                                </div>
                                <span asp-validation-for="IsPercentage" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Is Fixed -->
                        <div class="col-sm-3">
                            <div class="mb-4">
                                <label>Is Fixed</label><br />
                                <div class="form-check form-switch mt-2">
                                    <input type="checkbox" asp-for="IsFix" class="form-check-input" role="switch" />
                                </div>
                                <span asp-validation-for="IsFix" class="text-danger"></span>
                            </div>
                        </div>

                    </div>

                    <!-- Form buttons -->
                    <div class="d-flex justify-content-start gap-3">
                        <button type="submit" class="btn btn-primary">Submit</button>
                        <a asp-action="Index" class="btn btn-white">Cancel</a>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>


<!-- JS CompanySelect -->
<script src="~/FrontentJs/dropdowns/companyselect.js"></script>

@section scripts {
    <script>
        (function () {
            window.onload = function () {


                // INITIALIZATION OF NAVBAR VERTICAL ASIDE
                // =======================================================
                new HSSideNav('.js-navbar-vertical-aside').init()


                // INITIALIZATION OF FORM SEARCH
                // =======================================================
                new HSFormSearch('.js-form-search')


                // INITIALIZATION OF BOOTSTRAP DROPDOWN
                // =======================================================
                HSBsDropdown.init()


                // INITIALIZATION OF SELECT
                // =======================================================
                HSCore.components.HSTomSelect.init('.js-select')


                // INITIALIZATION OF ADD FIELD
                // =======================================================
                new HSAddField('.js-add-field', {
                    addedField: field => {
                        HSCore.components.HSTomSelect.init(field.querySelector('.js-select-dynamic'))
                        HSCore.components.HSMask.init(field.querySelector('.js-input-mask'))
                    }
                })


                // INITIALIZATION OF INPUT MASK
                // =======================================================
                HSCore.components.HSMask.init('.js-input-mask')


                // INITIALIZATION CompanySelect
                // =======================================================
                // var companyId = '@companyId';
                // initializeCompanySelect(companyId);
            }
        })()
    </script>
    <script>
        (function () {
            document.addEventListener('DOMContentLoaded', () => {
                const isInclusive = document.getElementById('isInclusive');
                const isExclusive = document.getElementById('isExclusive');

                if (!isInclusive || !isExclusive) {
                    console.error('Checkbox elements not found!');
                    return; // This return now is inside the arrow function callback
                }

                const toggleCheckbox = (checkedBox, otherBox) => {
                    if (checkedBox.checked) {
                        otherBox.checked = false;
                    }
                };

                isInclusive.addEventListener('change', () => {
                    toggleCheckbox(isInclusive, isExclusive);
                });

                isExclusive.addEventListener('change', () => {
                    toggleCheckbox(isExclusive, isInclusive);
                });

                // Optional: Prevent form submission if both are somehow checked
                const form = isInclusive.closest('form');
                if (form) {
                    form.addEventListener('submit', (e) => {
                        if (isInclusive.checked && isExclusive.checked) {
                            e.preventDefault();
                            alert('Please select only one option: Inclusive or Exclusive.');
                        }
                    });
                }
            });
        })();
    </script>
 }
