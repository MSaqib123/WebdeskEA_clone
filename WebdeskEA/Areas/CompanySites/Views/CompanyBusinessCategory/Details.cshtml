@model CompanyBusinessCategoryDto
@{
    ViewData["Title"] = "CompanyBusinessCatgorory";
}
<div class="page-header">
    <div class="page-title">
        <h4>@(ViewBag.NameOfForm) Details</h4>
        <h6>Full details of a @(ViewBag.NameOfForm)</h6>
    </div>
</div>

<div class="row">
    <div class="col-lg-12 col-sm-12">
        <div class="card">
            <div class="card-body">
                <div class="productdetails">
                    <ul class="product-bar">
                        <li>
                            <h4>CompanyName</h4>
                            <h6>@Model.CompanyName</h6>
                        </li>
                    </ul>
                </div>
                <div class="productdetails" style="margin-top:15px">
                    <div class="table-responsive">
                        <table class="table  datanew">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Business Category</th>
                                    <th>Company</th>
                                </tr>
                            </thead>
                            <tbody class="products">
                                @foreach (var item in Model.BusinessCategories)
                                {
                                    <tr>
                                        <td>@item.Id</td>
                                        <td>@item.Name</td>
                                        <td>@item.CompanyName</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <div>
            <a class="btn btn-submit me-2" asp-action="Create" asp-route-id="@Model.CompanyId">Edit</a>
            <a asp-action="Index" class="btn btn-cancel" id="bt">Cancel</a>
        </div>
    </div>
</div>

