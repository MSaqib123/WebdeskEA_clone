@model CompanyUserDto
@{
    ViewData["Title"] = "CompanyUser";
}
<div class="page-header">
    <div class="page-title">
        <h4>@(ViewBag.NameOfForm)</h4>
        <h6>Update @(ViewBag.NameOfForm)</h6>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <form method="post">
            <input hidden asp-for="CompanyId" />
            <div class="row">
                <div class="col-lg-4 col-sm-6 col-12">
                    <div class="form-group">
                        <label asp-for="CompanyName">Company Name</label>
                        <input type="text" class="form-control" asp-for="CompanyName" disabled>
                        <span asp-validation-for="CompanyName" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-4 col-sm-6 col-12">
                    <div class="form-group">
                        <label asp-for="UserIds">Select User</label>
                        <select class="form-control userSelect" asp-for="UserIds" asp-items="@(new SelectList(Model.UserList, "Id", "UserName"))" multiple>
                        </select>
                        <span asp-validation-for="UserIds" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-12">
                    <button class="btn btn-submit me-2">Submit</button>
                    <a asp-action="Index" class="btn btn-cancel" id="bt">Cancel</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section scripts {
    <script>
        $(document).ready(function () {
            $('.userSelect').select2();
        });
    </script>
}
